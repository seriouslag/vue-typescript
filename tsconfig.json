{
    "compilerOptions": {
        "lib": [
            "dom",
            "es2015"
        ],
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,  
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true, 
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        
    },
    "include": [
        "./src/**/*"
    ],
    "files": [
        "./vue-shims.d.ts"
    ]
}